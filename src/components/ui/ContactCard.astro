---
import Title from './Title.astro';
import Button from './Button.astro';

export interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  class?: string;
}

const { title, description, buttonText, buttonHref, class: className = "",  } = Astro.props;
---

<div class:list={[
  "bg-black border-2 border-white",
  "rounded-3xl p-6 md:p-8",
  "w-full md:w-4/5 lg:w-3/4 xl:w-3/5",
  "mx-auto",
  "flex flex-col md:flex-row",
  "items-center justify-center",
  "Â´!gap-4 !md:gap-4", 
  className
]}>
  <div class:list={[
    "flex flex-col",
    "items-center md:items-start",
    "justify-center",
    "gap-4 md:gap-6",
    "flex-1",
    "text-center md:text-left"
  ]}>
    <Title 
      isH1={false} 
      class:list={[
        "font-title text-white",
        "text-xl sm:text-2xl md:text-xl lg:text-2xl xl:text-3xl",
        "text-center md:text-left"
      ]}
    >
      {title}
    </Title>
    
    <Button 
      href={buttonHref}
      isGhost={false}
      class:list={[
        "w-full md:w-auto",
        "px-6 py-3"
      ]}
    >
      {buttonText}
    </Button>
  </div>
  
  <div class:list={[
    "flex items-center justify-center",
    "flex-1 md:flex-[1.2]"
  ]}>
    <p class:list={[
      "text-grey leading-relaxed",
      "font-sans",
      "text-sm sm:text-base md:text-sm lg:text-base",
      "text-justify md:text-left",
      "px-4 md:px-0",
      "max-w-none md:max-w-xs lg:max-w-sm"
    ]}>
      {description}
    </p>
  </div>
</div>