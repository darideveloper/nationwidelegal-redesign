---
import Title from './Title.astro';
import Button from './Button.astro';

export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  isGhostButton?: boolean;
  class?: string;
}

const {
  title = "", description = "", buttonText = "", buttonHref = "", isGhostButton = false,  class:className = "" } = Astro.props;

const titleBase = ["font-title", "text-white"];
const textStyles = ["text-grey", "leading-relaxed", "font-sans", "text-justify", "px-4"];
const btnDesktop = ["mx-auto", "w-1/2", "!bg-white", "!text-black", "!text-center", "!text-justify", "!border-black "];
const btnMobile = ["mx-auto", "!bg-white", "!text-black", , "!text-center", "!text-justify", "!border-black"];
---

<div class:list={[
  "bg-black border-2 border-white rounded-3xl p-8 w-full lg:w-1/2 mx-auto",
  className
]}>
  <div class="hidden lg:grid grid-cols-2 gap-x-8">
    <div class="flex flex-col items-center justify-center gap-6">
      <Title 
        isH1={false} 
        class:list={[
          ...titleBase,
          "!text-3xl text-center "
        ]}
      >
        {title}
      </Title>
      
      <Button 
        href={buttonHref} 
        isGhost={isGhostButton} 
        class:list={btnDesktop}
      >
        {buttonText}
      </Button>
    </div>
    
    <div class="flex items-center justify-center">
      <p class:list={textStyles}>
        {description}
      </p>
    </div>
  </div>

  <div class="lg:hidden flex flex-col items-center gap-6">
    <Title 
      isH1={false} 
      class:list={[
        ...titleBase,
        "text-2xl text-center"
      ]}
    >
      {title}
    </Title>
    
    <p class:list={["text-grey", "leading-relaxed", "font-sans", "text-justify", "px-4"]}>
      {description}
    </p>
    
    <Button 
      href={buttonHref} 
      isGhost={isGhostButton} 
      class:list={btnMobile}
    >
      {buttonText}
    </Button>
  </div>
</div>