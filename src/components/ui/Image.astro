---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className = "" } = Astro.props as Props;
---

<img
  src={src}
  alt={alt}
  class={`
    block
    w-full md:w-[30%]          /* Ancho completo en mÃ³viles, 30% en pantallas medianas y superiores */
    h-auto
    filter grayscale           /* Filtro grayscale por defecto */
    hover:grayscale-0          /* Quita el filtro solo si se pasa el cursor sobre la imagen */
    transition duration-300 ease-in-out
    cursor-default
    ${className}
  `}
/>
