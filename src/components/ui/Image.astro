---
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className = "" } = Astro.props as Props;
---

<img
  src={src}
  alt={alt}
  class:list={[
    "block",
    "w-full",
    "h-auto",
    "filter",
    "grayscale-200",
    "hover:grayscale-0",
    "duration-300",
    "cursor-default",
    "rounded-xl",
    className,
  ]}
/>