---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className = "" } = Astro.props as Props;
---

<img
  src={src}
  alt={alt}
  class={`
    block
    w-full md:w-[30%]         
    h-auto
    filter grayscale          
    hover:grayscale-0         
    transition duration-300 ease-in-out
    cursor-default
    ${className}
  `}
/>
