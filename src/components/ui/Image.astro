---
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class:className = "" } = Astro.props as Props;
---

<img
  src={src}
  alt={alt}
  class={`
    block
    w-full
    h-auto
    filter grayscale          
    hover:grayscale-0         
    duration-300
    cursor-default
    rounded-xl
    ${className}
  `}
/>
