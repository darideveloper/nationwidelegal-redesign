---
const { src, alt } = Astro.props;
---

<img src={src} alt={alt} class="filtered-img" />

<style>
  .filtered-img {
    filter: grayscale(100%);
    transition: filter 0.3s ease;
    cursor: default;
    display: block;
    width: 30%;
    height: auto;
  }

  .filtered-img:hover {
    filter: none;
  }

  .group:hover .filtered-img {
    filter: none;
  }
</style>
