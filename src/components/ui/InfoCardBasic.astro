---
import ImageSpace from "../ui/Image.astro";
import Button from "../ui/Button.astro";

interface Props {
  title: string;
  text: string;
  href: string;
  imgSrc: string;
  icon: any;
  class?: string;
}

const {title,text,href,imgSrc, icon, class: className = "", } = Astro.props as Props;
const Icon = icon;
---

<a
  href={href}
  class:list={[
    "group",
    "block",
    "relative",
    "overflow-hidden",
    "transition-transform",
    "duration-300",
    "transform",
    "hover:scale-105 active:scale-105",
    "info-card",
    "w-full md:w-[50vw] lg:w-[25vw]",
    "rounded-xl",
    "h-[55vh] md:h-[60vh]",
    "cursor-pointer",
    className,
  ]}
>
  <ImageSpace
    src={imgSrc}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover group-hover:grayscale-0 group-active:grayscale-0 duration-300"
  />

  <div
    class:list={[
      "absolute",
      "inset-0",
      "p-5 md:p-6",
      "flex",
      "flex-col",
      "justify-end",
      "text-white",
      "font-semibold",
      "z-10",
      "pl-8 md:pl-10",
      "pb-8 md:pb-10",
    ]}
  >
    <h3 class:list={[
      "text-xl md:text-2xl", 
      "font-title", 
      "font-bold", 
      "mb-1.5 md:mb-2"
    ]}>
      {title}
    </h3>
    <p class:list={[
      "text-base", 
      "leading-relaxed",
      "line-clamp-none"
    ]}>
      {text}
    </p>
  </div>

  <div
    class:list={[
      "absolute",
      "top-5 md:top-6",
      "right-5 md:right-6",
      "transition-transform",
      "transform",
      "group-hover:scale-110 group-active:scale-110",
      "z-20",
      "pointer-events-none",
    ]}
  >
    <div
      class:list={[
        "!w-16 !h-16 md:!w-20 md:!h-20",
        "!rounded-full",
        "!bg-transparent !text-black !border-0",
        "!p-0 !px-0 !py-0",
        "!m-0 !mx-0 !my-0",
        "!flex !items-center !justify-center",
        "!text-6xl md:!text-7xl",
      ]}
    >
      <Icon
        class:list={[
          "!w-12 !h-12 md:!w-14 md:!h-14",
          "text-black",
          "border-0",
          "m-0",
          "!bg-white",
          "rounded-full",
        ]}
      />
    </div>
  </div>
</a>