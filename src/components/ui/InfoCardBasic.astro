---
import ImageSpace from "../ui/Image.astro";
import Button from "../ui/Button.astro";

interface Props {
  title: string;
  text: string;
  href: string;
  imgSrc: string;
  icon: any;
  class?: string;
}

const {
  title,
  text,
  href,
  imgSrc,
  icon,
  class: className = "",
} = Astro.props as Props;
const Icon = icon;
---

<div
  class:list={[
    "group",
    "block",
    "relative",
    "overflow-hidden",
    "transition-transform",
    "duration-300",
    "transform",
    "hover:scale-105",
    "info-card",
    "w-[25vw]",
    "rounded-xl",
    "h-[60vh]",
    className,
  ]}
>
  <ImageSpace
    src={imgSrc}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover group-hover:grayscale-0 duration-300"
  />

  <div
    class:list={[
      "absolute",
      "inset-0",
      "p-6",
      "flex",
      "flex-col",
      "justify-end",
      "text-white",
      "font-semibold",
      "z-10",
      "pl-10",
      "pb-10",
    ]}
  >
    <h3 class:list={["text-2xl", "font-title", "font-bold", "mb-2"]}>
      {title}
    </h3>
    <p class:list={["text-base", "leading-relaxed"]}>
      {text}
    </p>
  </div>

  <div
    class:list={[
      "absolute",
      "top-6",
      "right-6",
      "transition-transform",
      "transform",
      "group-hover:scale-110",
      "z-20",
    ]}
  >
    <Button
      href={href}
      isGhost={false}
      class="!w-20 !h-20 !rounded-full !bg-transparent !text-black !border-0 !p-0 !px-0 !py-0 !m-0 !mx-0 !my-0 !flex !items-center !justify-center !text-9xl"
    >
      <Icon class:list={["!w-full", "!h-full", "text-black", "border-0", "m-0", "!bg-white"]} />
    </Button>
  </div>
</div>
