---
interface Link {
  name: string;
  href: string;
}

interface Props {
  links: Link[];
  activeLink: string;
}

const { links, activeLink } = Astro.props as Props;
---
<nav class="links-list">
  <ul>
    {links.map((link: Link) => (
      <li>
        <a href={link.href} class={link.href === activeLink ? "active" : ""}>
          {link.name}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .links-list ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .links-list li {
    margin-bottom: 10px;
  }

  .links-list a {
    display: block;
    text-decoration: none;
    font-size: 16px;
    padding: 10px;
    border-radius: 4px;
    color: #333;
    transition: background-color 0.3s ease, color 0.3s ease;
  }



  .links-list a.active {
    color: #fff !important;
  }
</style>
