---
import '../styles/global.css'
const { isH1 } = Astro.props;

const titleClasses = [
  'font-title',
  'font-medium',
  'text-5xl',
  'sm:text-6xl',
  'md:text-6xl',
  'lg:text-7xl',
  'leading-tight',
  'text-left'
];
---

<div class="container">
  {isH1
    ? <h1 class:list={titleClasses}>
        Streamlined<br />
        Cargo Delivery<br />
        Solutions
      </h1>
    : <h2 class:list={titleClasses}>
        Streamlined<br />
        Cargo Delivery<br />
        Solutions
      </h2>
  }
</div>
