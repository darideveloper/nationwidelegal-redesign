---
import '../styles/global.css'
const { href, isGhost = false } = Astro.props;
---

<a
  href={href}
  class={`inline-block px-2 py-3 text-center font-semibold transition duration-300 ease-in-out
    rounded-full border-2
    ${isGhost
      ? 'bg-transparent border-black text-black hover:bg-orange-500 hover:text-white hover:border-orange-500'
      : 'bg-orange-500 text-white border-orange-500 hover:bg-white hover:text-orange-500'}
  `}
>
  <slot />
</a>
